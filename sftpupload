syntax = "proto3";

// Enum for trade direction
enum Direction {
  BUY = 0;
  SELL = 1;
}

// Enum for trade type
enum Type {
  NEW = 0;
  AMEND = 1;
  CANCEL = 2;
}

// TransactionEvent message definition
message TransactionEvent {
  string source = 1;
  string tradeId = 2;
  int32 version = 3;
  Type type = 4;
  string batsSecurityId = 5;
  string bookId = 6;
  string buySell = 7;
  string notional = 8;
  string unitPrice = 9;
  string currency = 10;
  string traderId = 11;
  string counterPartyId = 12;
  google.protobuf.Timestamp tradeDateUTC = 13;
}
