syntax = "proto3";

// Enum for trade direction
enum Direction {
  BUY = 0;
  SELL = 1;
}

// Enum for trade type
enum Type {
  NEW = 0;
  AMEND = 1;
  CANCEL = 2;
}

message DecimalValue {
  uint32 scale = 1;
  uint32 precision = 2;
  bytes value = 3;
}

// TransactionEvent message definition
message TransactionEventMsg {
  string tradeId = 1;
  int32 version = 2;
  Type type = 3;
  string batsSecurityId = 4;
  string book = 5;
  Direction direction = 6;
  DecimalValue notional = 7;
  DecimalValue unitPrice = 8;
  string currency = 9;
  string traderId = 10;
  string counterPartyId = 11;
  google.protobuf.Timestamp tradeDateUTC = 12;
  string source = 13;
}
